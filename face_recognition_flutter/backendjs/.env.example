# Cấu hình Biến môi trường cho Backend
# Sao chép file này thành .env và điền các giá trị phù hợp.

# Cấu hình Cơ sở dữ liệu
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=face_attendance

# Cấu hình JWT (JSON Web Token)
JWT_SECRET=your-super-secret-key-for-production
JWT_EXPIRE=24h

# Cấu hình Server
PORT=8000
NODE_ENV=development

# Đường dẫn file (thường không cần thay đổi)
DATASET_PATH=dataset
TRAINER_PATH=trainer/trainer.yml
FACE_CASCADE_PATH=models/haarcascade_frontalface_default.xml
UPLOAD_PATH=uploads

# Ngưỡng tin cậy cho Nhận diện Khuôn mặt
CONFIDENCE_THRESHOLD=50

# Cấu hình CORS (Các nguồn được phép truy cập)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
